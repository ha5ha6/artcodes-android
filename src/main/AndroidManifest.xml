<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="uk.ac.horizon.storicodes" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />
    <uses-feature android:name="android.hardware.touchscreen" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Aestheticodes"
        tools:ignore="UnusedAttribute" >
        <activity
            android:name="uk.ac.horizon.aestheticodes.activities.AestheticodesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Aestheticodes.Camera" >
        </activity>
        <activity
            android:name="uk.ac.horizon.aestheticodes.core.activities.ScanActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Aestheticodes.Camera" >
        </activity>
        <activity
            android:name="uk.ac.horizon.aestheticodes.activities.MarkerActivity"
            android:parentActivityName="uk.ac.horizon.aestheticodes.activities.AestheticodesActivity"
            android:theme="@style/Theme.Aestheticodes.Transparent" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.ac.horizon.aestheticodes.activities.AestheticodesActivity" />
        </activity>
        <activity
            android:name="uk.ac.horizon.aestheticodes.activities.SelectorActivity"
            android:label="@string/title_activity_selector"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="uk.ac.horizon.aestheticodes.activities.WebActivity"
            android:label="@string/title_activity_web"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
