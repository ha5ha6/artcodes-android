<resources xmlns:tools="http://schemas.android.com/tools">
	<style name="Theme.Aestheticodes.Transparent" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:background">@null</item>
		<item name="background">@null</item>

		<item name="android:actionBarStyle" tools:ignore="NewApi">@style/Aestheticodes.ActionBar.Transparent</item>
		<item name="actionBarStyle">@style/Aestheticodes.ActionBar.Transparent</item>

		<item name="android:windowActionBarOverlay" tools:ignore="NewApi">true</item>
		<item name="android:windowActionModeOverlay" tools:ignore="NewApi">true</item>
		<item name="windowActionBarOverlay">true</item>

		<item name="android:colorPrimary" tools:ignore="NewApi">@color/apptheme_primary</item>
		<item name="android:colorPrimaryDark" tools:ignore="NewApi">@color/apptheme_primary_dark</item>
		<item name="android:colorAccent" tools:ignore="NewApi">@color/apptheme_primary</item>
		<item name="android:windowBackground">@android:color/white</item>

		<item name="colorPrimary">@color/apptheme_primary</item>
		<item name="colorPrimaryDark">@color/apptheme_primary_dark</item>
		<item name="colorAccent">@color/apptheme_primary</item>
		<item name="android:statusBarColor">@android:color/transparent</item>
	</style>

	<style name="Theme.Aestheticodes" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="android:colorPrimary" tools:ignore="NewApi">@color/apptheme_primary</item>
		<item name="android:colorPrimaryDark" tools:ignore="NewApi">@color/apptheme_primary_dark</item>
		<item name="android:colorAccent" tools:ignore="NewApi">@color/apptheme_primary</item>
		<item name="android:windowBackground">@android:color/white</item>

		<item name="colorPrimary">@color/apptheme_primary</item>
		<item name="colorPrimaryDark">@color/apptheme_primary_dark</item>
		<item name="colorAccent">@color/apptheme_primary</item>
	</style>

	<!-- Button style -->
	<style name="Theme.Aestheticodes.Button">
		<item name="android:background">@drawable/button</item>
		<item name="android:textColor">#FFF</item>
		<item name="android:textSize">12sp</item>
		<item name="android:textAllCaps" tools:ignore="NewApi">true</item>
		<item name="textAllCaps">true</item>
	</style>
</resources>
