<resources xmlns:tools="http://schemas.android.com/tools">
	<style name="CaptureTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:actionBarStyle" tools:ignore="NewApi">@style/ActionBar.Transparent.Compat</item>

		<item name="android:windowActionBarOverlay" tools:ignore="NewApi">true</item>
		<item name="android:windowActionModeOverlay" tools:ignore="NewApi">true</item>
		<item name="windowActionBarOverlay">true</item>
		<!-- <item name="windowActionModeOverlay">true</item>-->
		<item name="actionBarStyle">@style/ActionBar.Transparent.Compat</item>

		<item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
		<item name="android:windowTranslucentNavigation" tools:ignore="NewApi">true</item>
	</style>

	<style name="ActionBarStyle.Transparent" parent="@style/Widget.AppCompat.ActionBar">
		<item name="android:background">@null</item>
		<item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse</item>
	</style>

	<style name="MarkerTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
		<item name="android:background">@android:color/white</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowActionBarOverlay" tools:ignore="NewApi">true</item>
		<item name="android:windowActionModeOverlay" tools:ignore="NewApi">true</item>
		<item name="android:actionBarStyle" tools:ignore="NewApi">@style/ActionBarStyle.Transparent</item>

		<item name="windowActionBarOverlay">true</item>
		<!-- <item name="windowActionModeOverlay">true</item> -->
		<item name="actionBarStyle">@style/ActionBarStyle.Transparent</item>
	</style>

	<style name="ActionBar.Transparent.Compat" parent="@style/Widget.AppCompat.ActionBar">
		<item name="background">@null</item>
		<item name="titleTextStyle">@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse</item>
	</style>

</resources>