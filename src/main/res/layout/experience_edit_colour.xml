<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".activities.ScannerActivity">

	<data>

		<import type="android.view.View" />

		<variable
				name="experience"
				type="uk.ac.horizon.artcodes.model.Experience" />

		<variable
				name="camera"
				type="uk.ac.horizon.artcodes.scanner.camera.CameraAdapter" />

		<variable
				name="overlay"
				type="uk.ac.horizon.artcodes.scanner.overlay.Overlay" />
	</data>

	<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

		<SurfaceView
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				app:surface="@{camera.surfaceCallback}" />

		<ImageView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="fitXY"
				app:imageBitmap="@{overlay.bitmap}"
				tools:ignore="ContentDescription" />

		<LinearLayout
				android:id="@+id/bottomView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:background="#AFFF"
				android:orientation="vertical">

			<android.support.v7.widget.SwitchCompat
					android:id="@+id/invertSwitch"
					style="@style/Base.TextAppearance.AppCompat"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:checked="false"
					android:padding="16dp"
					android:text="@string/invert" />

			<Spinner
					android:id="@+id/colourPresetSpinner"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content" />

			<TextView
					android:id="@+id/hueSeekBarLabel"
					style="@style/Base.TextAppearance.AppCompat"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:text="@string/hue" />

			<SeekBar
					android:id="@+id/hueSlider"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:padding="16dp"
					android:max="180" />

		</LinearLayout>
	</FrameLayout>
</layout>