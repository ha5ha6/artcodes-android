<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="uk.ac.horizon.artcodes.activity.ArtcodeActivity">

	<data>

		<import type="android.view.View"/>

		<variable
			name="action"
			type="uk.ac.horizon.artcodes.model.Action"/>
	</data>

	<Button
		style="@style/Widget.AppCompat.ActionButton"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="16dp"
		android:text="@{action.name ?? action.displayUrl}"
		android:textAppearance="@style/TextAppearance.AppCompat.Title"
		android:textColor="@color/apptheme_accent_light"
		android:visibility="invisible"
		tools:text="Marker Blah"
		tools:visibility="visible"/>
</layout>
