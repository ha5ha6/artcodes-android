<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

	<data>

		<import type="android.view.View" />

		<variable name="experience"
		          type="uk.ac.horizon.aestheticodes.model.Experience" />
	</data>

	<android.support.design.widget.CoordinatorLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			tools:context=".activities.ExperienceActivity"
			app:contentScrim="?attr/colorPrimary"
			android:background="#CCC"
			android:fitsSystemWindows="true">

		<android.support.design.widget.AppBarLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:fitsSystemWindows="true">

			<android.support.design.widget.CollapsingToolbarLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:layout_scrollFlags="scroll"
					android:fitsSystemWindows="true">

				<ImageView android:layout_width="match_parent"
				           android:layout_height="wrap_content"
				           android:id="@+id/experienceImage"
				           android:src="@drawable/aestheticodes"
				           android:adjustViewBounds="true"
				           tools:ignore="ContentDescription"
				           android:scaleType="centerCrop"
				           android:fitsSystemWindows="true"
				           app:layout_collapseMode="parallax" />

				<android.support.v7.widget.Toolbar
						android:layout_height="?attr/actionBarSize"
						android:layout_width="match_parent"
						app:layout_collapseMode="pin"/>
			</android.support.design.widget.CollapsingToolbarLayout>

		</android.support.design.widget.AppBarLayout>

		<android.support.v4.widget.NestedScrollView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				app:layout_behavior="@string/appbar_scrolling_view_behavior">
			<LinearLayout
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginLeft="@dimen/detail_edge_margin"
					android:layout_marginRight="@dimen/detail_edge_margin"
					android:background="#FFF">

				<RelativeLayout android:layout_width="fill_parent"
				                android:layout_height="wrap_content"
				                android:padding="16dp">

					<ImageView android:id="@+id/experienceIcon"
					           android:layout_width="56dp"
					           android:layout_height="56dp"
					           android:layout_marginEnd="16dp"
					           android:layout_marginRight="16dp"
					           android:layout_alignParentStart="true"
					           android:layout_alignParentLeft="true"
					           android:layout_alignParentTop="true"
					           android:scaleType="fitCenter"
					           tools:ignore="ContentDescription"
					           android:src="@mipmap/ic_launcher" />

					<TextView android:layout_width="wrap_content"
					          android:layout_height="wrap_content"
					          android:layout_alignParentTop="false"
					          android:layout_toRightOf="@+id/experienceIcon"
					          android:layout_toEndOf="@+id/experienceIcon"
					          android:layout_centerVertical="true"
					          android:textAppearance="@style/TextAppearance.AppCompat.Title"
					          tools:text="Artcodes"
					          android:text="@{experience.name}" />

				</RelativeLayout>

				<Button android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/scan"
				        android:id="@+id/openExperience"
				        android:layout_gravity="end"
				        android:layout_marginLeft="16dp"
				        android:layout_marginRight="16dp"
				        android:paddingLeft="32dp"
				        android:paddingRight="32dp"
				        android:textColor="#FFF"
				        android:onClick="openExperience"
				        style="@style/Widget.AppCompat.Button"
				        android:layout_marginBottom="16dp"
				        android:background="@drawable/custom_button"
				        android:backgroundTint="@color/apptheme_primary" />

				<TextView android:layout_width="wrap_content"
				          android:layout_height="wrap_content"
				          android:layout_gravity="center_horizontal"
				          android:singleLine="false"
				          android:paddingLeft="16dp"
				          android:paddingRight="16dp"
				          android:paddingBottom="16dp"
				          android:textAppearance="@style/TextAppearance.AppCompat.Body1"
				          android:text="@{experience.description}" />

				<LinearLayout
						android:orientation="horizontal"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:paddingLeft="16dp"
						android:paddingRight="16dp"
						android:gravity="center_horizontal">

					<Button android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        style="@style/Widget.AppCompat.ActionButton"
					        android:text="@string/edit"
					        android:drawablePadding="4dp"
					        android:gravity="start|center_vertical"
					        android:id="@+id/editExperience"
					        android:onClick="editExperience"
					        android:drawableTop="@drawable/ic_edit_black_24dp"
					        android:layout_weight="1"
					        android:padding="8dp"
					        android:textAlignment="center"
					        android:textColor="#666"
					        android:background="?android:attr/selectableItemBackground" />

					<Button android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        style="@style/Widget.AppCompat.ActionButton"
					        android:text="@string/share"
					        android:drawablePadding="4dp"
					        android:gravity="start|center_vertical"
					        android:id="@+id/shareExperience"
					        android:onClick="shareExperience"
					        android:drawableTop="@drawable/ic_share_black_24dp"
					        android:layout_weight="1"
					        android:padding="8dp"
					        android:textAlignment="center"
					        android:textColor="#666"
					        android:background="?android:attr/selectableItemBackground" />
				</LinearLayout>
			</LinearLayout>
		</android.support.v4.widget.NestedScrollView>

		<LinearLayout android:layout_width="fill_parent"
		              android:layout_height="fill_parent"
		              android:gravity="center"
		              android:background="#FFF"
		              android:visibility="gone"
		              tools:visibility="gone">

			<ProgressBar style="?android:attr/progressBarStyleLarge"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content" />
		</LinearLayout>
	</android.support.design.widget.CoordinatorLayout>
</layout>