<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".activities.ExperienceEditActivity">

	<data>

		<import type="android.view.View" />

		<variable name="action"
		          type="uk.ac.horizon.artcodes.model.Action" />

		<variable name="actionEditor"
		          type="uk.ac.horizon.artcodes.ui.ActionEditor" />
	</data>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:id="@+id/editToggle"
				android:background="?attr/selectableItemBackground"
				android:orientation="horizontal">

			<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="16dp"
					android:layout_gravity="top"
					android:id="@+id/expand_image"
					android:tint="@color/ic_tint"
					android:src="@drawable/ic_expand_more_24dp" />

			<FrameLayout android:layout_width="0dp"
			             android:layout_height="wrap_content"
			             android:layout_weight="1">
				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="16dp"
						android:id="@+id/overview"
						android:orientation="vertical">

					<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="@{action.name ?? action.displayUrl}"
							android:hint="@string/action_name"
							android:textColor="#000"
							android:textAppearance="@style/TextAppearance.AppCompat" />

					<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="@{action.displayUrl}"
							android:visibility="@{action.name != null ? View.VISIBLE : View.GONE}"
							android:id="@+id/hint_text"
							android:textAppearance="@style/TextAppearance.AppCompat.Small"
							tools:text="www.cs.nott.ac.uk" />

				</LinearLayout>

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:id="@+id/editview"
						android:visibility="gone"
						tools:visibility="visible">

					<LinearLayout
							android:layout_width="0dp"
							android:layout_weight="1"
							android:layout_marginTop="6dp"
							android:layout_marginBottom="6dp"
							android:layout_marginLeft="12dp"
							android:layout_height="wrap_content"
							android:orientation="vertical">

						<EditText
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:hint="@string/action_name"
								android:inputType="text"
								android:singleLine="true"
								android:textAppearance="@style/TextAppearance.AppCompat"
								tools:text="Action Name"
								app:textWatcher="@{actionEditor.nameWatcher}"
								android:id="@+id/action_name" />

						<EditText
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:hint="@string/URL"
								app:textWatcher="@{actionEditor.urlWatcher}"
								android:inputType="textUri"
								android:layout_gravity="center_vertical"
								android:textAppearance="@style/TextAppearance.AppCompat"
								tools:text="http://www.cs.nott.ac.uk" />

						<Spinner
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:visibility="gone"
								android:id="@+id/spinner" />

						<LinearLayout
								android:orientation="vertical"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:id="@+id/marker_codes"
								>
						</LinearLayout>

						<EditText
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:hint="@string/markerCode"
								android:digits="0123456789:"
								android:inputType="time"
								android:singleLine="true"
								android:textAppearance="@style/TextAppearance.AppCompat"
								android:id="@+id/new_marker_code" />
					</LinearLayout>

					<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/ic_close_black_18dp"
							android:tint="@color/ic_tint"
							android:scaleType="fitCenter"
							android:background="?attr/selectableItemBackground"
							android:padding="16dp"
							android:id="@+id/action_delete" />
				</LinearLayout>
			</FrameLayout>
		</LinearLayout>
	</LinearLayout>
</layout>