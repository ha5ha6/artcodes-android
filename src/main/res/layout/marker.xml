<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools" tools:context=".activities.MarkerActivity">
	<ScrollView
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			tools:context=".activities.MarkerActivity"
			android:elevation="0dp">

		<LinearLayout android:layout_width="fill_parent"
		              android:layout_height="wrap_content"
		              android:orientation="vertical">

			<ImageView android:layout_width="fill_parent"
			           android:layout_height="wrap_content"
			           android:id="@+id/markerImage"
			           android:src="@drawable/aestheticodes"
			           android:adjustViewBounds="true"
			           tools:ignore="ContentDescription" android:layout_marginLeft="-1dp"
			           android:layout_marginRight="-1dp" android:layout_marginTop="-1dp"
			           android:scaleType="centerCrop"
					/>

			<ImageButton
					android:id="@+id/markerAction"
					android:layout_width="56dp"
					android:layout_height="56dp"
					android:layout_gravity="end"
					android:src="@drawable/ic_open_in_browser_white_24dp"
					android:layout_marginTop="-28dp"
					android:layout_marginRight="@dimen/padding"
					android:layout_marginEnd="16dp"
					android:background="@drawable/floating_action_button"
					android:onClick="open"
					android:contentDescription="@string/open_in_browser"
					android:elevation="3dp" android:tint="#FFF" android:scaleType="center" />

			<TextView android:layout_width="wrap_content"
			          android:layout_height="wrap_content"
			          android:textColor="#333"
			          android:id="@+id/markerTitle"
			          android:layout_gravity="top"
			          android:gravity="center_vertical"
			          android:layout_marginTop="-12dp"
			          android:paddingLeft="@dimen/padding"
			          android:paddingRight="@dimen/padding"
			          style="@style/TextAppearance.AppCompat.Title" />
			<TextView android:layout_width="wrap_content"
			          android:layout_height="wrap_content"
			          android:textColor="#333"
			          android:id="@+id/markerDescription"
			          android:layout_gravity="center_horizontal"
			          android:textSize="14sp"
			          android:padding="@dimen/padding"
			          android:tag="description" />
		</LinearLayout>
	</ScrollView>
	<View android:layout_width="match_parent"
	      android:layout_height="80dp"
	      android:background="@drawable/image_protection_scrim" />
</merge>
