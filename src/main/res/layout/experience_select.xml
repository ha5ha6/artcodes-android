<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".activity.NavigationActivity">
	<ScrollView
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:background="#EEE">

		<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:layout_marginTop="8dp"
				android:orientation="vertical"
				android:id="@+id/layout">

			<android.support.v7.widget.CardView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/welcome"
					app:cardElevation="2dp"
					app:cardBackgroundColor="@color/apptheme_primary"
					android:layout_margin="16dp">

				<LinearLayout
						android:layout_height="wrap_content"
						android:layout_width="match_parent"
						android:orientation="vertical"
						android:padding="16dp">

					<ImageView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_margin="16dp"
							android:src="@drawable/blossom_white"
							android:scaleType="fitCenter"
							tools:ignore="ContentDescription" />

					<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginBottom="16dp"
							android:textAppearance="@style/TextAppearance.AppCompat.Medium"
							android:textColor="#FFF"
							android:text="@string/welcome_title" />

					<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginBottom="16dp"
							android:textAppearance="@style/TextAppearance.AppCompat"
							android:textColor="#FFF"
							android:text="@string/welcome_text" />

					<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:orientation="horizontal"
							android:layout_gravity="end">

						<Button android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:textColor="#FFF"
						        android:id="@+id/more_button"
						        android:text="@string/more"
						        style="@style/Widget.AppCompat.Button.Borderless" />

						<Button android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:textColor="#FFF"
						        android:id="@+id/dismiss_button"
						        android:text="@string/gotit"
						        style="@style/Widget.AppCompat.Button.Borderless"
						        android:background="@drawable/abc_btn_default_mtrl_shape"
						        android:backgroundTint="@color/apptheme_primary_dark" />
					</LinearLayout>
				</LinearLayout>
			</android.support.v7.widget.CardView>

			<!--<include layout="@layout/experience_select_group"
				android:id="@+id/recent" />

			<include layout="@layout/experience_select_group"
				android:id="@+id/recommended"/>-->

		</LinearLayout>
	</ScrollView>
</layout>
