<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools" android:id="@+id/content_frame"
       android:layout_width="match_parent"
       android:layout_height="match_parent" tools:context=".activities.CameraActivity">
	<SurfaceView android:id="@+id/preview"
	             android:layout_width="fill_parent"
	             android:layout_height="fill_parent" />

	<uk.ac.horizon.aestheticodes.views.ViewfinderView
			android:id="@+id/viewfinder"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" />

	<RelativeLayout android:id="@+id/bottomView"
	                android:layout_width="fill_parent"
	                android:layout_height="100dp"
	                android:layout_gravity="bottom">

		<TextView android:layout_width="fill_parent"
		          android:layout_height="fill_parent"
		          android:id="@+id/modeText"
		          android:text="@string/mode_active_detect"
		          style="@style/Base.TextAppearance.AppCompat"
		          android:gravity="center" />
		<ImageView android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:id="@+id/modeMenuButton"
		           android:layout_alignParentEnd="true"
		           android:layout_alignParentRight="true"
		           android:layout_alignParentTop="true"
		           android:paddingRight="8dp"
		           android:paddingEnd="8dp"
		           android:paddingTop="8dp"
		           android:paddingBottom="8dp"
		           android:src="@drawable/ic_more_vert_white_24dp"
		           android:tint="#BBB"
		           android:background="?attr/selectableItemBackground"
		           android:onClick="showMenu" />
	</RelativeLayout>
</merge>
