<merge xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
       tools:context=".activities.CameraActivity">
    <SurfaceView android:id="@+id/preview"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"/>

    <uk.ac.horizon.aestheticodes.detect.ViewfinderView
            android:id="@+id/viewfinder"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>

	<TextView android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_gravity="bottom|center_horizontal"
	          android:background="@color/transparent"
	          android:text="@string/pager_mark"
	          android:textColor="@android:color/white" android:paddingBottom="100dp" android:id="@+id/pager_mark" />

	<ProgressBar
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			style="@android:style/Widget.Holo.ProgressBar.Horizontal"
			android:layout_gravity="bottom|center_horizontal"
			android:layout_marginRight="30dp"
			android:layout_marginLeft="30dp"
			android:layout_marginBottom="30dp" android:id="@+id/progress" />

    <TextView android:id="@+id/status_view"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/transparent"
              android:text="@string/default_status"
              android:textColor="@android:color/white"
              android:gravity="center_horizontal|bottom"
		    />

	<android.support.v4.view.ViewPager
			android:id="@+id/pager"
			android:layout_width="match_parent"
			android:layout_height="80dp"
			android:layout_gravity="bottom|center_horizontal"
			android:layout_marginBottom="20dp"
			android:overScrollMode="never"
			/>
</merge>