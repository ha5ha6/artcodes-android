<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".activities.ScannerActivity">

    <data>
        <import type="android.view.View"/>

        <variable
            name="experience"
            type="uk.ac.horizon.artcodes.model.Experience"/>

        <variable
            name="buffers"
            type="uk.ac.horizon.artcodes.scanner.ImageBuffers"/>
    </data>

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/cameraSurface"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:onClick="hideMenu"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_gravity="top"
                android:background="@color/viewfinder_mask"
                android:fitsSystemWindows="true"
                android:title="@{experience.name}"
                app:height="@{buffers.borderTop}"/>

            <android.support.design.widget.CoordinatorLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:imageBitmap="@{buffers.overlayBitmap}"
                    tools:ignore="ContentDescription"/>

                <LinearLayout
                    android:id="@+id/settingsMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/settings_mask"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="invisible"
                    android:animateLayoutChanges="true"
                    tools:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:visibility="gone"
                        android:id="@+id/settingsFeedback"
                        android:gravity="center_horizontal"/>

                    <LinearLayout
                        android:id="@+id/settingsSwitches"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                    </LinearLayout>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/settingsMenuButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/camera_floating_action_button"
                    android:contentDescription="@string/display_menu"
                    android:onClick="showMenu"
                    android:src="@drawable/ic_more_horiz_24dp"
                    android:tint="#FFF"/>

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="-8dp"
                    android:indeterminateOnly="true"/>
            </android.support.design.widget.CoordinatorLayout>

            <TextView
                android:id="@+id/bottomView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/viewfinder_mask"
                android:gravity="center"
                android:paddingBottom="@dimen/nav_padding"
                android:text="@string/status_searching"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:height="@{buffers.borderBottom}"/>
        </LinearLayout>
    </FrameLayout>
</layout>