<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".activities.ScannerActivity">

	<data>

		<import type="android.view.View" />

		<variable
				name="experience"
				type="uk.ac.horizon.artcodes.model.Experience" />

		<variable
				name="camera"
				type="uk.ac.horizon.artcodes.scanner.camera.CameraAdapter" />

		<variable
				name="overlay"
				type="uk.ac.horizon.artcodes.scanner.overlay.Overlay" />
	</data>

	<FrameLayout
			android:id="@+id/content_frame"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

		<SurfaceView
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				app:surface="@{camera.surfaceCallback}" />

		<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:onClick="hideMenu"
				android:orientation="vertical">

			<android.support.v7.widget.Toolbar
					android:id="@+id/toolbar"
					android:layout_width="fill_parent"
					android:layout_height="100dp"
					android:fitsSystemWindows="true"
					android:background="@color/viewfinder_mask"
					android:title="@{experience.name}"
					app:height="@{overlay.viewfinderSize}" />

			<RelativeLayout
					android:layout_width="fill_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					app:snacktext="@{overlay.feedback}">

				<ImageView
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:scaleType="fitXY"
						app:imageBitmap="@{overlay.bitmap}"
						tools:ignore="ContentDescription" />

				<LinearLayout
						android:id="@+id/settingsMenu"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentBottom="true"
						android:layout_alignParentEnd="true"
						android:layout_alignParentLeft="true"
						android:layout_alignParentRight="true"
						android:layout_alignParentStart="true"
						android:background="#3000"
						android:gravity="center"
						android:orientation="horizontal"
						android:paddingLeft="48dp"
						android:paddingRight="48dp"
						android:visibility="invisible"
						tools:visibility="visible">

					<ImageButton
							style="@style/Widget.AppCompat.ActionButton"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:contentDescription="Blah"
							android:onClick="nextThresholdDrawMode"
							app:imageResource="@{overlay.thresholdIcon}"
							tools:src="@drawable/ic_filter_b_and_w_off_white_24dp" />

					<ImageButton
							style="@style/Widget.AppCompat.ActionButton"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:contentDescription="Blah"
							android:onClick="nextCodeDrawMode"
							app:imageResource="@{overlay.codeIcon}"
							tools:src="@drawable/ic_filter_b_and_w_off_white_24dp" />

					<ImageButton
							style="@style/Widget.AppCompat.ActionButton"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:onClick="nextMarkerDrawMode"
							app:imageResource="@{overlay.markerIcon}"
							tools:src="@drawable/ic_border_clear_white_24dp" />

					<ImageButton
							style="@style/Widget.AppCompat.ActionButton"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:onClick="flipCamera"
							android:visibility="@{camera.cameraCount > 1 ? View.VISIBLE : View.GONE}"
							app:imageResource="@{camera.cameraFacingIcon}"
							tools:src="@drawable/ic_camera_rear_white_24dp" />

				</LinearLayout>

				<ImageButton
						android:id="@+id/settingsMenuButton"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:layout_alignParentBottom="true"
						android:layout_alignParentEnd="true"
						android:layout_alignParentRight="true"
						android:layout_gravity="end"
						android:layout_marginBottom="8dp"
						android:layout_marginEnd="8dp"
						android:layout_marginRight="8dp"
						android:background="@drawable/camera_floating_action_button"
						android:contentDescription="@string/display_menu"
						android:onClick="showMenu"
						android:src="@drawable/ic_more_horiz_white_24dp" />

				<ProgressBar
						style="@style/Widget.AppCompat.ProgressBar.Horizontal"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="-8dp"
						android:id="@+id/progressBar"
						android:indeterminateOnly="true"
						android:layout_alignParentBottom="true" />
			</RelativeLayout>

			<RelativeLayout
					android:id="@+id/bottomView"
					android:layout_width="match_parent"
					android:layout_height="100dp"
					android:background="@color/viewfinder_mask"
					android:fitsSystemWindows="true"
					app:height="@{overlay.viewfinderSize}">

				<TextView
						android:textAppearance="@style/TextAppearance.AppCompat.Medium"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/status_searching"
						android:layout_centerInParent="true" />
			</RelativeLayout>
		</LinearLayout>
	</FrameLayout>
</layout>